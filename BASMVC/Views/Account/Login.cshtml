@model BASMVC.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="row">
    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
        <div class="panel panel-theme  ">
            <div class="panel-heading text-center">
                <h2>Prihlásenie</h2>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="form-group">
                        <label>Užívateľ</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div class="form-group">
                        <label>Heslo</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        <label>Ponechať prihlásenie</label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-default btn-cta" type="submit">Prihlásiť</button>
                    </div>

                    <p>
                        @Html.ActionLink("Registruj sa", "Register", "Account") ak nemáte ešte konto.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

